<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.q_thjen.mmessage.Activity.ProfileUsersActivity">

    <ImageView
        android:src="@drawable/userprofile"
        android:id="@+id/iv_userProfile"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageUserProfile" />

    <TextView
        android:gravity="center"
        android:layout_below="@+id/iv_userProfile"
        android:id="@+id/tv_nameProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_below="@id/tv_nameProfile"
        android:id="@+id/tv_statusProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_above="@+id/bt_sendRequest"
        android:id="@+id/tv_totalFriend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:text="Send friend request"
        android:id="@+id/bt_sendRequest"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bt_declineRequest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Decline friend requeset"
        android:id="@+id/bt_declineRequest"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
