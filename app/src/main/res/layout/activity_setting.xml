<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.q_thjen.mmessage.Activity.SettingActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/st_image"
        android:src="@drawable/user"
        android:layout_marginTop="@dimen/marginTop"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/imagesize"
        android:layout_height="@dimen/imagesize" />

    <TextView
        android:gravity="center"
        android:layout_marginLeft="@dimen/marginTop"
        android:layout_marginRight="@dimen/marginTop"
        android:textSize="@dimen/textCreateAccount"
        android:id="@+id/st_name"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/st_image"/>

    <TextView
        android:gravity="center"
        android:layout_marginLeft="@dimen/marginTop"
        android:layout_marginRight="@dimen/marginTop"
        android:textSize="@dimen/textCreateAccount"
        android:id="@+id/st_status"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/st_name"/>

    <Button
        android:text="Change status"
        android:layout_centerHorizontal="true"
        android:id="@+id/st_btchangestatus"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Change image"
        android:layout_centerHorizontal="true"
        android:id="@+id/st_btchangeimage"
        android:layout_above="@+id/st_btchangestatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
